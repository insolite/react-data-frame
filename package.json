{
  "name": "react-data-frame",
  "version": "0.1.0",
  "private": true,
  "description": "Table for huge data sets",
  "author": "Oleg Krasnikov",
  "readme": "README.md",
  "license": "LICENSE",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "start": "npm run watch && npm run storybook:start",
    "build": "lerna run build --scope react-data-frame",
    "watch": "lerna run watch --scope react-data-frame",
    "package": "lerna exec --scope react-data-frame -- npm pack",
    "storybook:start": "lerna run start --scope storybook",
    "storybook:build": "lerna run build --scope storybook",
    "prepublish": "lerna run prepublish",
    "lerna:publish": "lerna publish from-git --yes"
  },
  "devDependencies": {
    "lerna": "^5.4.3",
    "typescript": "^4.7.4"
  }
}
